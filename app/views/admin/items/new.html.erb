<div class="container">
 <div class="row">
  <div class="col-md-3">商品新規登録</div>
 </div>
  <div class="row">
   <div class="col-md-6 mx-auto">
    <%= form_with model:@item, url:'/admin/items', local:true do |f| %>
     <div class="row">
      <div class="col-md-2">
       <p>商品画像</p>
      </div>
      <div class="col-md-10">
       <%= f.attachment_field :image %>
      </div>
     </div>
     <div class="row">
      <div class="col-md-2">
       <p>商品名</p>
      </div>
      <div class="col-md-10">
       <%= f.text_field :name %>
      </div>
     </div>
     <div class="row">
      <div class="col-md-2">
       <p>商品説明</p>
      </div>
      <div class="col-md-10">
       <%= f.text_area :introduction %>
      </div>
     </div>
     <div class="row">
      <div class="col-md-2">
       <p>ジャンル</p>
      </div>
      <div class="col-md-10">
    　　<%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: "選択してください"} %>
      </div>
     </div>
     <div class="row">
      <div class="col-md-2">
       <p>税抜価格</p>
      </div>
      <div class="col-md-10">
       <%= f.text_field :price %>
      </div>
     </div>
      <%= f.radio_button :is_active, '販売中' %>
      <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active, '販売停止中' %>
      <%= f.label :is_active, '販売停止中', value: false %>
     <div><%= f.submit '新規登録' %></div>
     <% end %>
    </div>
   </div>
 </div>
