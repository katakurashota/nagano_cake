<div class="container">
 <div class="row">
  <div class="col-md-3">商品詳細</div>
 </div>
 <div class="row">
  <div class="col-md-2">
   <p>商品名</p>
  </div>
  <div class="col-md-10">
   <%= @item.name %>
  </div>
 </div>
<div class="row">
  <div class="col-md-2">
   <p>商品説明</p>
  </div>
  <div class="col-md-10">
   <%= @item.introduction %>
  </div>
 </div>
 <div class="row">
  <div class="col-md-2">
   <p>ジャンル</p>
  </div>
  <div class="col-md-10">
   <%= @item.genre.name %>
  </div>
 </div>
<div class="row">
  <div class="col-md-2">
   <p>税込価格</p>
   <p>(税抜価格)</p>
  </div>
  <div class="col-md-10">
    <p><%= (@item.price*1.08).to_i %></p>
    <p><%= @item.price %></p>
  </div>
 </div>
 <div class="row">
  <div class="col-md-2">
   <p>販売ステータス</p>
  </div>
  <div class="col-md-10">
   <%= @item.is_active %>
  </div>
 </div>
　<div><%= link_to "編集する",edit_admin_item_path(@item.id) %></div>
</div>