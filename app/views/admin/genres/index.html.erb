<div>ジャンル一覧・追加</div>
<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
<div>ジャンル名</div>
<%= f.text_field :name %>
<%= f.submit '新規登録' %>
<% end %>
<table>
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
    </tr>
  </tbody>
  <% end %>
</table>