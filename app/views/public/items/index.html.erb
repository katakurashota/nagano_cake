<div class ="container">
 <div class ="row">
  <h5>商品一覧</h5>
 </div>
 <div class="row">
  <% @items.each do |item| %>
  <div class="col-md-3">
   <%= link_to item_path(item) do %>
   <div><%= attachment_image_tag item, :image, :fill, 200, 100, format: 'jpeg' %></div>
   <div><%= item.name %></div>
    <% end %>
    <div>¥<%= (item.price*1.08).to_i %></div>
  </div>
  <% end %>
</div>
</div>