<div class ="container">
 <div class ="row">
  <h5 class="col-md-9">ショッピングカート</h5>
  <div class="col-md-3"><%= link_to "全て削除", destroy_all_path, method: :delete, class:"btn btn-sm btn-danger" %></div>
 </div>
 <table class="table">
 <div class="row">
   <tr>
     <th>商品名</th>
     <th>単価（税込)</th>
     <th>数量</th>
     <th>小計</th>
     <th></th>
   </tr>
   <% @cart_items.each do |cart_item| %>
   <%= form_with model:cart_item, local:true do |f| %>
   <tr>
     <td><%= cart_item.item.name %></td>
     <td><%= (cart_item.item.price*1.08).to_i %></td>
     <td>
      <%= f.select :amount, [['1',1], ['2',2], ['3',3]] %>
      <%= f.submit '変更', class:"btn btn-sm btn-success" %>
     </td>
     <td><%= (cart_item.item.price*1.08).to_i*cart_item.amount %></td>
     <td><%= link_to "削除する", cart_item_path(cart_item), class:"btn btn-sm btn-danger",method: :delete %></td>
     <% @totalprice +=  (cart_item.item.price * 1.08).floor * cart_item.amount %>
   </tr>
   <% end %>
   <% end %>
   </div>
   </table>
   <div class ="row">
    <div class ="col-md-9">
     <%= link_to "買い物を続ける", items_path, class:"btn btn-sm btn-primary" %>
    </div>
     <h5 class="col-md-3">
     合計金額<%= @totalprice %>
    </h5>
   </div>
   <div class="col-md-5 mx-auto">
    <%= link_to "情報入力に進む", new_order_path, class:"btn btn-sm btn-success" %>
   </div>
</div>