<div class ="container">
 <div class ="row">
  <h5>注文情報確認</h5>
 </div>
 <div class ="row">
  <div class="col-md-8">
   <table class ="table">
    <thead>
     <tr>
      <th>商品名</th>
      <th>単価</th>
      <th>数量</th>
      <th>小計</th>
     </tr>
    </thead>
    <% @cart_items.each do |cart_item| %>
    <% item = cart_item.item %>
    <tbody>
     <tr>
      <td><%= item.name %></td>
      <td><%= (item.price*1.08).to_i %></td>
      <td><%= cart_item.amount %></td>
      <td><%= (item.price*1.08).to_i*cart_item.amount %></td>
      <% @totalprice +=  (cart_item.item.price * 1.08).floor * cart_item.amount %>
     </tr>
    </tbody>
    <% end %>
   </table>
  </div>
  <div class="col-md-2">
   <div>合計金額<%= @totalprice %></div>
   <div>送料<%= @postage %></div>
   <div>請求金額</div>
  </div>
 </div>
 <div>支払方法<%= </div>
 <div>お届け先</div>
</div>