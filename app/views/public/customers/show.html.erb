<div class ="container">
 <div class ="row">
  <h5>マイページ</h5>
 </div>
 <div class ="row">
   <div class ="col-md-1">
    <p>登録情報</p>
   </div>
   <div class ="col-md-11">
    <%= link_to "編集する", edit_customer_path(@customer.id), class:"btn btn-sm btn-success" %>
   </div>
 </div>
 <div class ="row">
   <div class ="col-md-6">
  <table class ="table">
   <tbody>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
     <th>郵便番号</th>
     <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
     <th>住所</th>
     <td><%= @customer.address %></td>
    </tr>
    <tr>
     <th>電話番号</th>
     <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
     <th>メールアドレス</th>
     <td><%= @customer.email %></td>
    </tr>
  </tbody>
  </table>
  </div>
 </div>
</div>