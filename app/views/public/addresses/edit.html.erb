<div class ="container">
  <%= form_with model:@address, local:true do |f| %>
 <div class ="row">
  <h5>配送先編集</h5>
 </div>
 <div class ="row">
   <div class="col-md-2">
     <p>郵便番号（ハイフンなし）</p>
   </div>
   <div class ="col-md-8">
    <%= f.text_field :postal_code %>
   </div>
   </div>
   <div class ="row">
   <div class="col-md-2">
     <p>住所</p>
   </div>
   <div class ="col-md-8">
    <%= f.text_field :address %>
   </div>
   </div>
   <div class ="row">
   <div class="col-md-2">
     <p>宛名</p>
   </div>
   <div class ="col-md-8">
    <%= f.text_field :name %>
    <%= f.submit '変更内容を保存', class:"btn btn-sm btn-success" %>
   </div>
   </div>
   <% end %>
</div>