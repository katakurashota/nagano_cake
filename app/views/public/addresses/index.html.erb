<div class ="container">
 <div class ="row">
  <h5>配送先登録/一覧</h5>
 </div>
 <%= form_with model:@addresse, url:'/addresses', local:true do |f| %>
 <div class="row">
  <div class="col-md-2">
   <p>郵便番号（ハイフンなし）</p>
  </div>
  <div class="col-md-10">
   <%= f.text_field :postal_code %>
  </div>
 </div>
 <div class="row">
  <div class="col-md-2">
   <p>住所</p>
  </div>
  <div class="col-md-10">
   <%= f.text_area :address %>
  </div>
 </div>
 <div class="row">
  <div class="col-md-2">
   <p>宛名</p>
  </div>
  <div class="col-md-10">
   <%= f.text_field :name %>
   <%= f.submit '新規登録', class:"btn btn-sm btn-success" %>
  </div>
 </div>
 <% end %>
 <div class="col-md-8">
 <table class ="table">
  <thead>
   <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
   </tr>
  </thead>
  <% @addresses.each do |address| %>
  <tbody>
   <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td>
     <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-sm btn-success" %>
     <%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-sm btn-danger" %>
    </td>
   </tr>
  </tbody>
  <% end %>
 </table>
 </div>
</div>