<div class="container">
 <div class="row">
  <div class="col-md-3">新規会員登録</div>
 </div>
　<div class="row">
　 <div class="col-md-12 mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>
  <div class="row">
   <div class="col-md-3">
     <p>名前</p>
    </div>
    <div class="col-md-4">
     <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="col-md-4">
     <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>
  </div>
  <div class="row">
   <div class="col-md-3">
     <p>フリガナ</p>
    </div>
    <div class="col-md-4">
     <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="col-md-4">
     <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>
  <div class="row">
   <div class="col-md-3">
     <p>メールアドレス</p>
    </div>
     <div class="col-md-8">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="row">
   <div class="col-md-3">
     <p>郵便番号</p>
    </div>
     <div class="col-md-8">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
     <p>住所</p>
    </div>
    <div class="col-md-8">
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  </div>
  <div class="row">
   <div class="col-md-3">
     <p>電話番号</p>
    </div>
    <div class="col-md-8">
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>
　<div class="row">
   <div class="col-md-3">
     <p>パスワード（６文字以上)</p>
   </div>
    <div class="col-md-8">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row">
   <div class="col-md-3">
     <p>パスワード（確認用）</p>
   </div>
    <div class="col-md-8">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

  </div>
 </div>
</div>
